<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    
    <Appenders>
        <File name="autocodigo" fileName="autocodigo.log" append="false">
            <PatternLayout pattern="%d{dd-MM-yyyy HH:mm:ss,SSS} [%t] %-5p %c %x - %m%n"/>
        </File>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{dd-MM-yyyy HH:mm:ss,SSS} [%t] %-5p %c %x - %m%n"/>
        </Console>
    </Appenders>
    
    <Loggers>
        <Root level="debug">
            <AppenderRef ref="autocodigo"/>
        </Root>
    </Loggers>
    
</Configuration>

